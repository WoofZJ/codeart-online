---
import DateTime from "../Common/DateTime.astro";
import Counter from "./Counter.astro";
import SocialLinks from "./SocialLinks.astro";
import PoweredByList from "./PoweredByList.astro";
import VisitStats from "./VisitStats.astro";
import VisitStatsUI from "./VisitStatsUI.astro";
---

<footer
  class="flex flex-col lg:flex-row gap-y-4 items-center justify-around bg-base-200 py-6"
>
  <div class="flex flex-col flex-1/3 items-center gap-2 text-sm order-2">
    <div
      class="flex flex-col items-center bg-base-300 gap-0.5 py-2 px-4 rounded-lg"
    >
      <SocialLinks />
    </div>
    <div class="flex flex-col items-center py-2 px-4 rounded-lg gap-2">
      <span>本站由以下技术强力驱动：</span>
      <PoweredByList />
    </div>
  </div>
  <div class="flex flex-col flex-1/3 gap-2 items-center order-3 lg:order-2">
    <span class="text-lg">CodeArt.Online - WoofZJ&apos;s Blog</span>
    <div class="flex flex-col gap-2 items-center text-sm">
      <div class="divider m-0">本站已在线</div>
      <Counter />
      <div class="divider m-0 text-sm">最近一次构建于</div>
      <DateTime utcDate={new Date()} tzOffset={8} />
      <div class="divider m-0 h-1"></div>
    </div>
    <aside>
      <span> &copy; 2026 WoofZJ. All rights reserved. </span>
    </aside>
  </div>
  <div class="flex flex-col flex-1/3 items-center gap-2 order-1 lg:order-3">
    <VisitStats server:defer>
      <VisitStatsUI slot="fallback" />
    </VisitStats>
  </div>
</footer>
